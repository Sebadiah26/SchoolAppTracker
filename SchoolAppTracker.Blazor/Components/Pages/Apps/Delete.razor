@page "/apps/{Id:int}/delete"
@inject IApplicationService AppService
@inject NavigationManager Nav
@rendermode InteractiveServer

<PageTitle>Delete Application</PageTitle>

<h1>Delete Application</h1>

@if (app == null)
{
    <p>Loading...</p>
}
else
{
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this application?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@app.Name</dd>
                <dt class="col-sm-3">Vendor</dt>
                <dd class="col-sm-9">@(app.VendorName ?? "N/A")</dd>
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@app.Status</dd>
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@(app.Category?.Name ?? "N/A")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-danger" @onclick="HandleDelete">Delete</button>
        <a href="/apps/@Id" class="btn btn-outline-secondary">Cancel</a>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    private Application? app;

    protected override async Task OnInitializedAsync()
    {
        app = await AppService.GetByIdAsync(Id);
    }

    private async Task HandleDelete()
    {
        await AppService.DeleteAsync(Id);
        Nav.NavigateTo("/apps");
    }
}
