@page "{id:int}"
@model SchoolAppTracker.Pages.Apps.DeleteModel
@{
    ViewData["Title"] = "Delete Application";
}

<h1>Delete Application</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this application?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Application.Name</dd>
            <dt class="col-sm-3">Vendor</dt>
            <dd class="col-sm-9">@(Model.Application.VendorName ?? "N/A")</dd>
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Application.Status</dd>
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@(Model.Application.Category?.Name ?? "N/A")</dd>
        </dl>
    </div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Application.ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Apps/Details" asp-route-id="@Model.Application.ID" class="btn btn-outline-secondary">Cancel</a>
</form>
