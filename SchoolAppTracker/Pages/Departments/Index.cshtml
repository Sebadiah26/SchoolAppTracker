@page
@model SchoolAppTracker.Pages.Departments.IndexModel
@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<form method="post" asp-page-handler="Create" class="row g-3 mb-4">
    <div class="col-md-4">
        <input type="text" class="form-control" name="name" placeholder="New department name..." required />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-success">Add Department</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model.Departments)
        {
            <tr>
                <td>
                    @if (Model.EditId == department.ID)
                    {
                        <form method="post" asp-page-handler="Update" class="d-flex">
                            <input type="hidden" name="id" value="@department.ID" />
                            <input type="text" class="form-control form-control-sm me-2" name="name" value="@department.Name" required />
                            <button type="submit" class="btn btn-sm btn-primary me-1">Save</button>
                            <a asp-page="/Departments/Index" class="btn btn-sm btn-outline-secondary">Cancel</a>
                        </form>
                    }
                    else
                    {
                        @department.Name
                    }
                </td>
                <td>
                    @if (Model.EditId != department.ID)
                    {
                        <a asp-page="/Departments/Index" asp-route-editId="@department.ID" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <form method="post" asp-page-handler="Delete" class="d-inline">
                            <input type="hidden" name="id" value="@department.ID" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this department?')">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
